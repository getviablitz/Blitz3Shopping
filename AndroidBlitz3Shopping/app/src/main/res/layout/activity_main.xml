<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/splash"
    tools:context=".Activities.MainActivity">

    <Button
        android:id="@+id/btn_go"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_above="@+id/btn_menu"
        android:layout_centerInParent="true"
        android:layout_marginBottom="150dp"
        android:background="@drawable/go" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_menu"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:padding="5dp">

        <EditText
            android:visibility="gone"
            android:id="@+id/idInputSearchKey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/idBtnSearch"
            android:layout_toStartOf="@+id/idBtnSearch"
            android:background="@color/white"
            android:hint="Search text"
            android:padding="10dp" />

        <ToggleButton
            android:id="@+id/idBtnSearch"
            android:layout_width="@dimen/main_menu_height_width"
            android:layout_height="@dimen/main_menu_height_width"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/toggle_bg_search"
            android:checked="false"
            android:padding="5dp"
            android:textOff=""
            android:textOn="" />
    </RelativeLayout>
    <Button
        android:id="@+id/btn_menu"
        android:layout_width="@dimen/menu_height_width"
        android:layout_height="@dimen/menu_height_width"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="15dp"
        android:background="@drawable/menu" />

</RelativeLayout>